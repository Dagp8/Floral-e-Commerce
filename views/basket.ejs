<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Basket <%= shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <link rel="stylesheet" type="text/css" href="/header.css" />
    <link rel="stylesheet" type="text/css" href="/basket.css" />
    <script
      src="https://kit.fontawesome.com/8868674f05.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('header') %> <%- include('nav') %>

    <div class="basket-container">
      <h1>Your Basket</h1>

      <% if (cart.length === 0) { %>
      <p>Your basket is empty.</p>
      <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Discount Amount</th>
            <th>Discounted Price</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% let subtotal = 0; %> <% cart.forEach(function(item, index) { %>
          <tr>
            <td><%= item.name %></td>
            <td>£<%= item.price.toFixed(2) %></td>
            <td>
              <% if (item.discount) { %> £<%= item.discount.toFixed(2) %> <% }
              else { %> N/A <% } %>
            </td>
            <td>
              <% if (item.discount) { %> £<%= (item.price -
              item.discount).toFixed(2) %> <% } else { %> £<%=
              item.price.toFixed(2) %> <% } %>
            </td>
            <td>
              <form
                class="update-remove-form"
                action="/update-cart-quantity"
                method="post"
              >
                <input type="hidden" name="index" value="<%= index %>" />
                <input
                  type="number"
                  name="quantity"
                  value="<%= item.quantity %>"
                  min="1"
                  max="99"
                />
                <button type="submit" class="update-btn">Update</button>
              </form>
              <form
                class="remove-form"
                action="/remove-from-cart"
                method="post"
              >
                <input type="hidden" name="index" value="<%= index %>" />
                <button type="submit" class="remove-btn">Remove</button>
              </form>
            </td>
          </tr>
          <% subtotal += (item.price - (item.discount || 0)) * item.quantity; %>
          <% }); %>
        </tbody>
      </table>
      <p>Subtotal: £<%= subtotal.toFixed(2) %></p>
      <p>Total: £<%= (subtotal || 0).toFixed(2) %></p>

      <div class="shipping">
        <h3>Shipping Information</h3>
        <label for="houseFlatNumber">House or Flat Number:</label>
        <input
          type="text"
          id="houseFlatNumber"
          name="houseFlatNumber"
          required
        />
        <label for="addressLine1">Address Line 1:</label>
        <input type="text" id="addressLine1" name="addressLine1" required />
        <label for="addressLine2">Address Line 2:</label>
        <input type="text" id="addressLine2" name="addressLine2" />
        <label for="postcode">Postcode:</label>
        <input type="text" id="postcode" name="postcode" required />
      </div>

      <div class="card-message">
        <h3>Card Message</h3>
        <textarea id="cardMessage" name="cardMessage"></textarea>
      </div>

      <div class="shoping_btn">
        <a href="allflowers" class="shopping-btn">Continue Shopping</a>
      </div>

      <form id="payment-form" action="/payment" method="POST">
        <input
          type="hidden"
          name="subtotal"
          value="<%= subtotal.toFixed(2) %>"
        />
        <script
          src="https://checkout.stripe.com/checkout.js"
          class="stripe-button"
          data-key="<%= stripePublicKey %>"
          data-amount="<%= subtotal * 100 %>"
          data-name="Floral Harmony"
          data-description="Payment for Order"
          data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
          data-locale="auto"
          data-currency="gbp"
        ></script>
      </form>

      <% } %>
    </div>

    <%- include('footer') %>
  </body>
</html>
